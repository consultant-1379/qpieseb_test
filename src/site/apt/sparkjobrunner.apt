+---------------------------------------------------------------------------------------------------------
<step name="sales-analysis">
    <attribute name="uri" value="spark-batch-local://cell-analysis"/>
    <attribute name="sql" value="SELECT * FROM CELL_PERFORMANCE_DATA"/>
</step>
+---------------------------------------------------------------------------------------------------------
